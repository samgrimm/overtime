<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <% @post.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title:"Overtime App Notification", sticky:false) %>
    <% end %>
  <% end %>
  <div class="form-group">
    <%= f.label :date %>
    <%= f.date_field :date, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :work_performed%>
    <%= f.text_area :work_performed, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :daily_hours%>
    <%= f.number_field :daily_hours, class:"form-control", :step => 0.1 %>
  </div>

  <%= render partial: 'status', locals: { f: f } if current_user.type == 'AdminUser' %>

  <%= f.submit 'Save', class:"btn btn-primary btn-block" %>
<% end %>
