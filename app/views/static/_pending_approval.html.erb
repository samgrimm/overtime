<% pending_approvals.each do |pending_approval| %>
  <div class="homepage-block col-md-3">
    <h5><%= pending_approval.user.full_name%></h5>
    <p>
      <span class='pending-details'>Date Submitted: </span><%= pending_approval.date%>
    </p>
    <p>
      <span class='pending-details'>Work Performed: </span><%= truncate(pending_approval.work_performed)%>
    </p>
    <div class="row">
      <div class="col-md-6">
        <%= link_to 'Approve', approve_post_path(pending_approval), class:"btn btn-success", id: "approve_#{pending_approval.id}"%>
      </div>
      <div class="col-md-6">
        <%= link_to 'Review', edit_post_path(pending_approval), class:"btn btn-warning"%>
      </div>
    </div>
  </div>
<% end %>
