<%= pending_approvals.each do |pending_approval| %>
  <div class="homepage-block col-md-3">
    <h5><%= pending_approval.user.full_name%></h5>
    <p>
      <span class='pending-details'>Date Submitted: </span><%= pending_approval.date%>
    </p>
    <p>
      <span class='pending-details'>Rationale: </span><%= truncate(pending_approval.rationale)%>
    </p>
    <div class="row">
      <div class="col-md-6">
        <%= link_to 'Approve', root_path, class:"btn btn-success"%>
      </div>
      <div class="col-md-6">
        <%= link_to 'Review', root_path, class:"btn btn-warning"%>
      </div>
    </div>
  </div>

<% end %>
