<tr>
  <td>
    <%= post.id %>
  </td>
  <td>
    <%= post.overtime_request %>
  </td>
  <td>
    <%= post.user.full_name %>
  </td>
  <td>
    <%= post.date %>
  </td>
  <td>
    <%= link_to truncate(post.rationale), post %>
  </td>

    <%= status_label post.status %>

  <td>
    <%= link_to '', edit_post_path(post), id:"edit_#{post.id}", class:"fa fa-pencil" if policy(post).update?  %>

  </td>
  <td>
    <%= link_to '', post_path(post), method: :delete, id:"delete_#{post.id}", class:"fa fa-trash", data: { confirm: "Are you sure?"}%>
  </td>
</tr>
