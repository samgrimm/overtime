<%= recent_audit_items.each do |recent_audit_item| %>
  <div class="homepage-block col-md-3">
    <h5><%= recent_audit_item.user.full_name%></h5>
    <p>
      <span class='pending-details'>Week Starting: </span><%= recent_audit_item.start_date%>
    </p>
    <p>
      <span class='pending-details'>Confirmed At: </span><%= recent_audit_item.end_date || 'pending'%>
    </p>

    <p>
      <span class='pending-details'>Status: </span><%= recent_audit_item.status%>
    </p>

  </div>

<% end %>
